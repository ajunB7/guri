<% if notice %>
<div class="alert alert-success alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <%= notice %>
</div>

<% end %>

<h1 class="text-center">Listing Students</h1>

<%= render 'students/horizontal-menus/months' %>
<%= render 'students/horizontal-menus/days' %>

<table class="table table-hover table-striped students-table">
  <thead>
    <tr>
      <th class="text-center">Name</th>
      <th class="text-center">Fee</th>
      <th class="text-center">Hours Today</th>
      <th class="text-center">Money Made Today</th>
      <th class="text-center">Month Hours</th>
      <th class="text-center">Month Money Made</th>
      <th class="text-center" colspan="5"> Actions </th>
    </tr>
  </thead>

  <tbody>
    <% @students.order("name").each do |student| %>
      <tr align="center">
        <td><h3><%= student.name %></h3></td>
        <td>$<%= student.fee %></td>
        <td class="today-hours"><%= @today_hours[student.id] %></td>
        <td>$<%= student.fee * @today_hours[student.id] %></td>
        <td><%= @hours[student.id] %></td>
        <td>$<%= student.fee * @hours[student.id] %></td>
        <td><%= link_to 'Add Hour', add_hour_students_path(:student_id => student.id, :count => 1, :day => @day, :month => @month, :year => @year), :class => 'btn btn-success'%>  <%= link_to 'Remove Today\'s Hours', delete_hour_students_path(:student_id => student.id, :day => @day, :month => @month, :year => @year), :class => 'btn btn-danger'%></td>
        <td><%= link_to 'Show', student, :class => 'btn btn-primary'%></td>
        <td><%= link_to 'Edit', edit_student_path(student), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
    <tr align="center">
      <td></td>
      <td></td>
      <td><strong><%= @total_today_hours %></strong></td>
      <td><strong>$<%= @total_today_fee %></strong></td>
      <td><strong><%= @total_hours %></strong></td>
      <td><strong>$<%= @total_fee %></strong></td>
    </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, :class => 'btn btn-success' %>
