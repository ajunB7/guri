<div class="container">
	<div class="row" style="padding-top:50px">

        <div class=" text-center">

            <div class="list-group list-group-horizontal">

                <% Date::MONTHNAMES[1..12].each_with_index do |m, i| %>
                    <% i += 1 %>
                    <% if (i == @month.to_i) %>
                        <%= link_to m, students_path(:month => i), :class => 'list-group-item active'%>
                    <% else %>
                        <%= link_to m, students_path(:month => i), :class => 'list-group-item'%>
                    <% end %>
                <% end %>
            </div>

        </div>

	</div>
</div>