<% @extrafees = student.extrafees.where("date_part('month', created_at AT TIME ZONE 'Canada/Eastern') = ? AND date_part('year', created_at AT TIME ZONE 'Canada/Eastern') = ?", month, year)%>

<% unless @extrafees.empty? %>
<table class="table table-hover table-striped">
  <thead>

  <tr>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

<tbody>
<% @extrafees.each do |extrafee| %>
  <tr>
    <td><%= extrafee.name %></td>
    <td><%= extrafee.price %></td>
    <td><%= link_to 'Show', [extrafee.student, extrafee] %></td>
    <td><%= link_to 'Edit', edit_student_extrafee_path(extrafee.student, extrafee) %></td>
    <td><%= link_to 'Destroy', [extrafee.student, extrafee], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />
<% end %>

<%= link_to 'New Extrafee', new_student_extrafee_path(student.id), class: 'btn btn-primary' %>
